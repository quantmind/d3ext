{
    "giotto": {
        "options": {
            "banner": "src/banner.js"
        },
        "src": ["src/utils/*.js",
                "src/math/*.js",
                "src/canvas/*.js",
                "src/core/internals/*.js",
                "src/core/defaults.js",
                "src/core/options.js",
                "src/core/gradient.js",
                "src/core/paper.js",
                "src/core/group.js",
                "src/core/drawing.js",
                "src/core/svg.js",
                "src/core/canvas.js",
                "src/core/viz.js",
                "src/viz/*.js",
                "src/plugins/*.js",
                "src/text/*.js",
                "src/css.js",
                "src/integration/*.js",
                "src/close.js"],
        "dest": "dist/giotto.js"
    },
    "require": {
        "src": ["vendor/requirejs/require.js",
                "src/cfg.js",
                "vendor/require-config.js"],
        "dest": "vendor/require.js"
    },
    "giottoweb": {
        "src": ["vendor/requirejs/require.js",
                "src/cfg.js",
                "vendor/require-config.js",
                "src/giottoweb/open.js",
                "src/giottoweb/features.js",
                "src/giottoweb/colorbrewer.js",
                "src/giottoweb/close.js"],
        "dest": "giottoweb/media/giottoweb/giottoweb.js",
        "minify": false
    },
    "examples": {
        "src": ["examples/*/*.js"],
        "minify": false
    },
    "tests": {
        "src": ["src/tests/*.js"],
        "minify": false
    }
}
