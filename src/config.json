{
    "rollup": {
        "options": {
            "sourceMap": true,
            "format": "umd",
            "moduleName": "giotto",
            "plugins": {
                "babel": {
                    "presets": ["es2015-rollup"]
                },
                "nodeResolve": {
                    "jsnext": true
                }
            }
        },
        "build/bundle.js": ["src/giotto.js"]
    },
    "eslint": {
        "options": {
            "quiet": false
        },
        "target": [
            "Gruntfile.js",
            "src/**/*.js"
        ]
    },
    "js": {
        "giotto": {
            "options": {
                "banner": "src/banner.js"
            },
            "src": ["build/bundle.js"],
            "dest": "dist/giotto.js"
        }
    },
    "sass": {
        "light": {
            "files": {
                "dist/css/light/giotto.css": "scss/light.scss"
            }
        },
        "dark": {
            "files": {
                "dist/css/dark/giotto.css": "scss/dark.scss"
            }
        }
    },
    "cssmin": {
        "light": {
            "files": {
                "dist/css/light/giotto.min.css": ["dist/css/light/giotto.css"]
            }
        },
        "dark": {
            "files": {
                "dist/css/dark/giotto.min.css": ["dist/css/dark/giotto.css"]
            }
        }
    }
}
