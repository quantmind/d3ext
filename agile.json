{
    "release": {
        "giottojs": {
            "note_file": "docs/notes.md"
        }
    },
    "requirejs": {
        "giottojs": {
            "name": "giottojs/app",
            "out": "giottojs/media/giottojs/giottojs.js'"
        },
        "paths": [
            "giotto",
            "angular",
            "angular-sanitize"
        ]
    },
    "sass": {
        "light": {
            "files": {
                "dist/css/light/giotto.css": "scss/light.scss"
            }
        },
        "dark": {
            "files": {
                "dist/css/dark/giotto.css": "scss/dark.scss"
            }
        }
    },
    "cssmin": {
        "light": {
            "files": {
                "dist/css/light/giotto.min.css": ["dist/css/light/giotto.css"]
            }
        },
        "dark": {
            "files": {
                "dist/css/dark/giotto.min.css": ["dist/css/dark/giotto.css"]
            }
        }
    },
    "httpcopy": {
        "sandstone": {
            "src": [
                "https://bootswatch.com/sandstone/_bootswatch.scss",
                "https://bootswatch.com/sandstone/_variables.scss"
            ],
            "target": "scss/boostwatch/sandstone/"
        },
        "slate": {
            "src": [
                "https://bootswatch.com/slate/_bootswatch.scss",
                "https://bootswatch.com/slate/_variables.scss"
            ],
            "target": "scss/boostwatch/slate/"
        }
    },
    "shell": {
        "d3_quant_path": {
            "command": "cd ../d3-quant && pwd"
        },
        "d3-quant-link": {
            "command": ["rm -rf ./node_modules/d3-quant",
                        "ln -s ${d3_quant_path} ${repo_path}/node_modules/d3-quant"]
        }
    }
}
